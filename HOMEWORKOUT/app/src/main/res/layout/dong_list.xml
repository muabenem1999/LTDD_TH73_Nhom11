<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardCornerRadius="20dp"
    android:divider="@android:color/transparent"
    app:cardElevation="2dp"
    app:layout_constraintCircleRadius="10dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/imagelist"
                    android:scaleType="fitXY"
                    android:layout_width="match_parent"
                    android:layout_height="150dp" />
                <View
                    android:background="@drawable/custom_backgroud_banner"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"/>
                <TextView
                    android:padding="10dp"
                    android:textColor="@android:color/white"
                    android:layout_alignBottom="@+id/imagelist"
                    android:id="@+id/textimagelist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="@string/tap_co_bung"/>
                <TextView
                    android:id="@+id/noidunglist"
                    android:padding="10dp"
                    android:text="Được khoa học chứng minh giúp giảm cân và nâng cao chức nawg tim mjach"
                    android:layout_below="@+id/imagelist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <Button
                    android:padding="10dp"
                    android:text="Hướng dẫn"
                    android:id="@+id/buttonHuongDan"
                    android:background="@android:color/transparent"
                    android:layout_below="@id/noidunglist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <Button
                    android:text="Bắt đầu"
                    android:id="@+id/buttonStart"
                    android:background="@android:color/transparent"
                    android:layout_below="@id/noidunglist"
                    android:layout_toRightOf="@+id/buttonHuongDan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

        </RelativeLayout>
</android.support.v7.widget.CardView>