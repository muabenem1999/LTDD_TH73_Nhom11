<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="500dp"
    android:layout_gravity="center"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <RelativeLayout
            android:id="@+id/layout_image_bai"
            android:layout_width="match_parent"
            android:layout_height="120dp">
            <ImageView
                android:src="@drawable/abs_1"
                android:layout_centerInParent="true"
                android:padding="10dp"
                android:id="@+id/image_bai_popup"
                android:layout_width="100dp"
                android:layout_height="100dp"/>
            <RelativeLayout
                android:layout_margin="10dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/button_background"
                android:layout_width="45dp"
                android:layout_height="45dp">
                <ImageButton
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_videocam"
                    android:background="?android:selectableItemBackground"
                    android:padding="10dp"
                    android:layout_width="35dp"
                    android:layout_height="35dp"/>
            </RelativeLayout>
        </RelativeLayout>
        <TextView
            android:id="@+id/text_ten_bai_popup"
            android:layout_margin="10dp"
            android:layout_below="@+id/layout_image_bai"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="18sp"
            android:text="NHẢY CAO"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/text_tuto_bai_popup"
            android:padding="10dp"
            android:layout_below="@+id/text_ten_bai_popup"
            android:text="Bắt đầu đứng hai chân để gần nhau, tay buông xuống để hai bên, sau đó nhảy lên chân dang ra và để tay lên cao trên đầu. Trở lại vị trí bắt đầu rồi lặp lại. Bài tập này tập luyện cho toàn thân và có tác dụng với tất cả các nhóm cơ lớn."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/button_close_popup"
            android:background="?android:selectableItemBackground"
            android:layout_margin="10dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:textColor="#2196F3"
            android:text="Đóng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <RelativeLayout
        android:background="#009688"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical">
        <ImageButton
            android:src="@drawable/ic_button_back_popup"
            android:background="?android:selectableItemBackground"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:id="@+id/button_back_popup"
            android:layout_width="50dp"
            android:layout_height="50dp" />
        <TextView
            android:layout_centerInParent="true"
            android:id="@+id/number_popup"
            android:textStyle="bold"
            android:textSize="28sp"
            android:textColor="#FFFFFF"
            android:text="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageButton
            android:src="@drawable/ic_button_next"
            android:background="?android:selectableItemBackground"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:id="@+id/button_next_popup"
            android:layout_width="50dp"
            android:layout_height="50dp" />

    </RelativeLayout>


</LinearLayout>