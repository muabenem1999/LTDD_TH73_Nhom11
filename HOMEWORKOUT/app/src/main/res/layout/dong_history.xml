<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/imghistory"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/shape"/>
    <TextView
        android:layout_alignParentRight="true"
        android:padding="5dp"
        android:id="@+id/ntng"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="22 thg 4 , 4:08CH"/>
    <TextView
        android:paddingLeft="5dp"
        android:layout_toRightOf="@+id/imghistory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textNamehistory"
        android:text="Cổ điển"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="@android:color/black"/>
    <ImageView
        android:layout_toLeftOf="@+id/txttimeTap"
        android:id="@+id/imgdongho"
        android:paddingLeft="5dp"
        android:layout_below="@+id/textNamehistory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_alarm_on_black_24dp"/>
    <TextView
        android:layout_alignParentRight="true"
        android:paddingLeft="5dp"
        android:layout_below="@+id/textNamehistory"
        android:id="@+id/txttimeTap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:21"/>
    <TextView
        android:layout_toRightOf="@+id/imghistory"
        android:layout_below="@+id/textNamehistory"
        android:id="@+id/numwk"
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="13 workout" />




</RelativeLayout>